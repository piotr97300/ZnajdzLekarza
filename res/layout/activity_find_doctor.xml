<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background = "@color/background_color"
    tools:context="com.example.znajdzlekarza.FindDoctorActivity" >

    <TextView
        android:id="@+id/tvLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvProvider"
        android:layout_below="@+id/tvProvider"
        android:text="Szerokość geo: "
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLatitude"
        android:layout_below="@+id/tvLatitude"
        android:text="Długość geo: "
        android:textColor="@color/text_color"
        android:textSize="15sp"  />

    <TextView
        android:id="@+id/tvInformations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLongitude"
        android:layout_below="@+id/tvLongitude"
        android:text="Dodatkowe info: "
        android:textColor="@color/text_color"
        android:textSize="15sp"  />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvInformations"
        android:layout_below="@+id/tvInformations"
        android:layout_marginTop="15dp"
        android:text="Odległość do najbliższego szpitala: "
        android:textColor="@color/text_color"
        android:textSize="18sp"  />

    <TextView
        android:id="@+id/tvProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="37dp"
        android:text="Informacje o GPS: "
        android:textColor="@color/text_color"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/btBack"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background = "@color/button_color"
        android:textColor= "@color/button_text_color"
        android:text="Powrót" />

</RelativeLayout>